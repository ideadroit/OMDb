<UserControl
    x:Class="OMDb.WinUI3.MyControls.EntryCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:OMDb.WinUI3.MyControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Margin="4">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid CornerRadius="4">
            <Image x:Name="Image_Cover" Stretch="UniformToFill"/>
        </Grid>
        <Grid VerticalAlignment="Bottom" Grid.Row="1" Margin="0,4,0,0">
            <TextBlock x:Name="TextBlock_Name" HorizontalAlignment="Center" FontWeight="Light"/>
        </Grid>
    </Grid>
</UserControl>

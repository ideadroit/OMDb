<UserControl
    x:Class="OMDb.WinUI3.MyControls.LabelCollection1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:OMDb.WinUI3.MyControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:OMDb.Core.Models"
    mc:Ignorable="d">

    <Grid x:Name="MainGrid">
        <Image
            x:Name="BgImage"
            HorizontalAlignment="Stretch"
            Stretch="UniformToFill" />
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <StackPanel Margin="32,0,0,0" VerticalAlignment="Center">
                <TextBlock
                    x:Name="TitleTextBlock"
                    FontSize="40"
                    Foreground="White"
                    Text="标题" />
                <TextBlock
                    x:Name="DesTextBlock"
                    Margin="2,10,0,20"
                    FontSize="16"
                    FontWeight="Thin"
                    Foreground="LightGray"
                    Text="备注" />
                <Button
                    Width="130"
                    Margin="0,10"
                    Click="Button_Click"
                    Content="查看全部"
                    FontSize="16" />
            </StackPanel>
            <controls:AdaptiveGridView
                x:Name="ItemsList"
                Grid.Column="1"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                DesiredWidth="140"
                ItemHeight="200"
                OneRowModeEnabled="True"
                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                StretchContentForSingleRow="False">
                <controls:AdaptiveGridView.ItemTemplate>
                    <DataTemplate x:DataType="models:Entry">
                        <local:EntryCard Entry="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=DataContext}" />
                    </DataTemplate>
                </controls:AdaptiveGridView.ItemTemplate>
            </controls:AdaptiveGridView>

        </Grid>
    </Grid>
</UserControl>

<UserControl
    x:Class="OMDb.WinUI3.MyControls.LabelCollection1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:OMDb.WinUI3.MyControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:OMDb.Core.Models"
    mc:Ignorable="d">

    <Grid x:Name="MainGrid">
        <Image
            x:Name="BgImage"
            HorizontalAlignment="Stretch"
            Stretch="UniformToFill" />
        <StackPanel Margin="32,0,0,0" VerticalAlignment="Center">
            <TextBlock
                x:Name="TitleTextBlock"
                FontSize="40"
                Foreground="White"
                Text="标题" />
            <TextBlock
                x:Name="DesTextBlock"
                Margin="2,10,0,20"
                FontSize="16"
                FontWeight="Thin"
                Foreground="LightGray"
                Text="备注" />
            <Button
                Width="130"
                Margin="0,10"
                Click="Button_Click"
                Content="查看全部"
                FontSize="16" />
        </StackPanel>
        <!--<Rectangle Height="160" VerticalAlignment="Bottom">
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0.5,1" EndPoint="0.5,0">
                    <GradientStop Offset="1" Color="#00f6fafc" />
                    <GradientStop Offset="0" Color="#f6fafc" />
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>-->
        <GridView
            x:Name="ItemsList"
            Grid.Row="1"
            Margin="24,0,0,2"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Background="Transparent"
            ScrollViewer.HorizontalScrollMode="Disabled"
            ScrollViewer.VerticalScrollMode="Disabled"
            SelectionChanged="ItemsListBox_SelectionChanged">
            <GridView.ItemContainerStyle>
                <Style TargetType="GridViewItem">
                    <Setter Property="Margin" Value="0" />
                    <Setter Property="Padding" Value="4,0" />
                </Style>
            </GridView.ItemContainerStyle>
            <GridView.ItemTemplate>
                <DataTemplate x:DataType="models:Entry">
                    <local:EntryCard
                        Width="120"
                        Height="200"
                        Margin="4"
                        Entry="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=DataContext}" />
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
    </Grid>
</UserControl>

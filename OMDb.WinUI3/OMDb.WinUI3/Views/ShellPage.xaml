<Page
    x:Class="OMDb.WinUI3.Views.ShellPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:Interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:animatedvisuals="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals"
    xmlns:converters="using:OMDb.WinUI3.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="using:OMDb.WinUI3.Helpers"
    xmlns:local="using:OMDb.WinUI3.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:OMDb.WinUI3.Views"
    Background="Transparent"
    mc:Ignorable="d">

    <Page.Resources>
        <Thickness x:Key="NavigationViewContentMargin">0,46,0,0</Thickness>
        <Thickness x:Key="NavigationViewContentGridBorderThickness">1,1,0,0</Thickness>
        <CornerRadius x:Key="NavigationViewContentGridCornerRadius">8,0,0,0</CornerRadius>
        <converters:StrVisibilityConverter x:Key="StrVisibilityConverter" />
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Page.Resources>

    <Grid>
        <Grid x:Name="MainContentGrid" Background="Transparent">
            <NavigationView
                x:Name="NavigationView"
                AlwaysShowHeader="True"
                BackRequested="NavigationView_BackRequested"
                CompactPaneLength="80"
                IsBackButtonVisible="Visible"
                IsBackEnabled="{x:Bind ViewModel.CanGoBack, Mode=OneWay}"
                IsPaneToggleButtonVisible="False"
                IsSettingsVisible="True"
                IsTitleBarAutoPaddingEnabled="False"
                OpenPaneLength="80"
                PaneDisplayMode="Left"
                SelectedItem="{x:Bind ViewModel.Selected, Mode=TwoWay}">
                <NavigationView.MenuItemContainerStyle>
                    <Style TargetType="NavigationViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        <Setter Property="Padding" Value="0,10" />
                    </Style>
                </NavigationView.MenuItemContainerStyle>
                <NavigationView.MenuItemTemplate>
                    <DataTemplate x:DataType="NavigationViewItem">
                        <Grid HorizontalAlignment="Center">
                            <!--  bug  -->
                            <!--<Interactivity:Interaction.Behaviors>
                            <Core:DataTriggerBehavior
                                Binding="{Binding IsSelected,Mode=OneWay}"
                                ComparisonCondition="Equal"
                                Value="True">
                                <Core:ChangePropertyAction
                                    PropertyName="Foreground"
                                    TargetObject="{Binding ElementName=MenuItemIcon}"
                                    Value="{ThemeResource SystemAccentColor}" />
                                <Core:ChangePropertyAction
                                    PropertyName="Foreground"
                                    TargetObject="{Binding ElementName=MenuItemContent}"
                                    Value="{ThemeResource SystemAccentColor}" />
                            </Core:DataTriggerBehavior>
                            <Core:DataTriggerBehavior
                                Binding="{Binding IsSelected,Mode=OneWay}"
                                ComparisonCondition="Equal"
                                Value="False">
                                <Core:ChangePropertyAction
                                    PropertyName="Foreground"
                                    TargetObject="{Binding ElementName=MenuItemIcon}"
                                    Value="{ThemeResource ForegroundBrush}" />
                                <Core:ChangePropertyAction
                                    PropertyName="Foreground"
                                    TargetObject="{Binding ElementName=MenuItemContent}"
                                    Value="{ThemeResource ForegroundBrush}" />
                            </Core:DataTriggerBehavior>
                        </Interactivity:Interaction.Behaviors>-->
                            <StackPanel Orientation="Vertical">
                                <ContentPresenter
                                    x:Name="MenuItemIcon"
                                    Width="24"
                                    Height="24"
                                    HorizontalAlignment="Center"
                                    Content="{Binding Icon}">
                                    <ContentPresenter.RenderTransform>
                                        <ScaleTransform CenterX="12" ScaleX="0.8" ScaleY="0.8" />
                                    </ContentPresenter.RenderTransform>
                                </ContentPresenter>
                                <TextBlock
                                    x:Name="MenuItemContent"
                                    HorizontalAlignment="Center"
                                    FontSize="12"
                                    Text="{Binding Content}" />
                            </StackPanel>
                            <Rectangle
                                Width="2"
                                Margin="-16,8,0,8"
                                HorizontalAlignment="Left"
                                Fill="{ThemeResource SystemAccentColor}"
                                Visibility="{Binding IsSelected, Converter={StaticResource BoolToVisibilityConverter}}" />
                        </Grid>
                    </DataTemplate>
                </NavigationView.MenuItemTemplate>
                <NavigationView.MenuItems>
                    <NavigationViewItem
                        x:Uid="Shell_Home"
                        helpers:NavHelper.NavigateTo="views:HomePage"
                        IsSelected="True"
                        Tag="Collapsed">
                        <NavigationViewItem.Icon>
                            <SymbolIcon Symbol="Home" />
                        </NavigationViewItem.Icon>
                    </NavigationViewItem>

                    <NavigationViewItem
                        x:Uid="Shell_Classification"
                        helpers:NavHelper.NavigateTo="views:ClassificationPage"
                        Tag="Collapsed">
                        <NavigationViewItem.Icon>
                            <SymbolIcon Symbol="AlignCenter" />
                        </NavigationViewItem.Icon>
                    </NavigationViewItem>

                    <NavigationViewItem
                        x:Uid="Shell_Entry"
                        helpers:NavHelper.NavigateTo="views:EntryPage"
                        Tag="Collapsed">
                        <NavigationViewItem.Icon>
                            <SymbolIcon Symbol="ViewAll" />
                        </NavigationViewItem.Icon>
                    </NavigationViewItem>

                    <NavigationViewItem x:Uid="Shell_Management" helpers:NavHelper.NavigateTo="views:ManagementPage">
                        <NavigationViewItem.Icon>
                            <SymbolIcon Symbol="Library" />
                        </NavigationViewItem.Icon>
                    </NavigationViewItem>
                </NavigationView.MenuItems>
                <NavigationView.FooterMenuItems>


                    <NavigationViewItem x:Uid="Shell_Tools" helpers:NavHelper.NavigateTo="views:ToolsPage">
                        <NavigationViewItem.Icon>
                            <SymbolIcon Symbol="Repair" />
                        </NavigationViewItem.Icon>
                    </NavigationViewItem>
                </NavigationView.FooterMenuItems>
                <Frame x:Name="shellFrame" Background="Transparent" />
            </NavigationView>
        </Grid>
        <InfoBar
            x:Name="InfoBar"
            Height="50"
            Margin="0,50,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            IsOpen="False"
            Severity="Informational" />
        <Grid x:Name="WaitingGrid" Visibility="Collapsed">
            <Grid.Background>
                <SolidColorBrush Opacity="0.6" Color="{ThemeResource ControlFillColorDefault}" />
            </Grid.Background>
            <ProgressRing
                x:Name="WaitingProgressRing"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" />
        </Grid>
    </Grid>
</Page>

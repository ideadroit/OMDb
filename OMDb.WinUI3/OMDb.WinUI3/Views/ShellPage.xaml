<Page
    x:Class="OMDb.WinUI3.Views.ShellPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animatedvisuals="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals"
    xmlns:converters="using:OMDb.WinUI3.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="using:OMDb.WinUI3.Helpers"
    xmlns:local="using:OMDb.WinUI3.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:OMDb.WinUI3.Views"
    Background="Transparent"
    mc:Ignorable="d">

    <Page.Resources>
        <Thickness x:Key="NavigationViewContentMargin">0,46,0,0</Thickness>
        <Thickness x:Key="NavigationViewContentGridBorderThickness">1,1,0,0</Thickness>
        <CornerRadius x:Key="NavigationViewContentGridCornerRadius">8,0,0,0</CornerRadius>
        <converters:StrVisibilityConverter x:Key="StrVisibilityConverter" />
    </Page.Resources>

    <Grid Background="Transparent">
        <Grid
            Height="48"
            VerticalAlignment="Top"
            Canvas.ZIndex="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Border
                Name="AppTitleLeftBorder"
                Grid.Column="0"
                Width="48" />

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Grid
                    Width="16"
                    Height="16"
                    CornerRadius="8">
                    <Image
                        Width="16"
                        Height="16"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Source="/Images/logo_32.png" />
                </Grid>

                <!--<TextBlock
                    x:Uid="AppDisplayNameTextBlock"
                    Margin="12,0,0,0"
                    VerticalAlignment="Center"
                    Style="{StaticResource CaptionTextBlockStyle}" />-->
            </StackPanel>

            <!--  Draggable part of the title bar  -->
            <Border
                x:Name="AppTitleBar"
                Grid.Column="1"
                Height="32"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                Background="Transparent" />
        </Grid>
        <NavigationView
            x:Name="NavigationView"
            AlwaysShowHeader="True"
            BackRequested="NavigationView_BackRequested"
            IsBackButtonVisible="Visible"
            IsBackEnabled="{x:Bind ViewModel.CanGoBack, Mode=OneWay}"
            IsPaneToggleButtonVisible="True"
            IsSettingsVisible="True"
            IsTitleBarAutoPaddingEnabled="False"
            OpenPaneLength="240"
            SelectedItem="{x:Bind ViewModel.Selected, Mode=TwoWay}">
            <NavigationView.MenuItems>
                <NavigationViewItem
                    x:Uid="Shell_Home"
                    helpers:NavHelper.NavigateTo="views:HomePage"
                    IsSelected="True"
                    Tag="Collapsed">
                    <NavigationViewItem.Icon>
                        <SymbolIcon Symbol="Home" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem
                    x:Uid="Shell_Classification"
                    helpers:NavHelper.NavigateTo="views:ClassificationPage"
                    Tag="Collapsed">
                    <NavigationViewItem.Icon>
                        <SymbolIcon Symbol="AlignLeft" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem
                    x:Uid="Shell_Entry"
                    helpers:NavHelper.NavigateTo="views:EntryPage"
                    Tag="Collapsed">
                    <NavigationViewItem.Icon>
                        <SymbolIcon Symbol="AlignLeft" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem
                    x:Uid="Shell_Storage"
                    helpers:NavHelper.NavigateTo="views:StoragePage"
                    Tag="Collapsed">
                    <NavigationViewItem.Icon>
                        <SymbolIcon Symbol="ViewAll" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem x:Uid="Shell_Label" helpers:NavHelper.NavigateTo="views:LabelPage">
                    <NavigationViewItem.Icon>
                        <SymbolIcon Symbol="Flag" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.MenuItems>
            <Frame x:Name="shellFrame" Background="Transparent" />
        </NavigationView>

        <InfoBar
            x:Name="InfoBar"
            Height="50"
            Margin="0,50,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            IsOpen="False"
            Severity="Informational" />
    </Grid>
</Page>

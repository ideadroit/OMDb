<Page
    x:Class="OMDb.WinUI3.Dialogs.AddEntryBatchDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:OMDb.WinUI3.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:OMDb.WinUI3.Models"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid Width="1920" Height="720">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <StackPanel Orientation="Horizontal">
                <Button Content="全选" />
                <Button Margin="10,0,0,0" Content="全不选" />
                <Button Margin="10,0,0,0" Content="新增行" />
                <Button Margin="10,0,0,0" Content="删除行" />
                <Button
                    Margin="10,0,0,0"
                    Click="SelectFolders_Click"
                    Content="选择文件夹" />
                <Button Margin="10,0,0,0" Content="获取信息" />
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1">
            <ListView
                Margin="0,20,0,0"
                ItemsSource="{x:Bind VM.EntryDetailCollection}"
                SelectionMode="Multiple">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:EntryDetail">

                        <Grid Height="100" HorizontalAlignment="Left">
                            <Image
                                x:Name="Image_CoverImg"
                                Width="60"
                                Height="80"
                                Source="{x:Bind FullCoverImgPath, Mode=OneWay}"
                                Stretch="Fill" />
                            <Button
                                Width="60"
                                Height="80"
                                VerticalAlignment="Center"
                                Background="Transparent" />
                        </Grid>

                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </Grid>
</Page>

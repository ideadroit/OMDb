<local:DialogBase
    x:Class="OMDb.WinUI3.Dialogs.LineDetailDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:OMDb.WinUI3.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="Transparent"
    mc:Ignorable="d">

    <Grid MinWidth="300" MaxWidth="400">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid
            Padding="20,20"
            Background="{ThemeResource AcrylicInAppFillColorDefaultBrush}"
            CornerRadius="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock
                x:Name="LineTextBlock"
                Margin="0,10"
                FontSize="16"
                TextWrapping="WrapWholeWords" />
            <StackPanel
                Grid.Row="1"
                Margin="0,10"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <TextBlock
                    Margin="0,0,4,0"
                    FontStyle="Oblique"
                    Text="From" />
                <TextBlock Text="《" />
                <TextBlock x:Name="NameTextBlock" />
                <TextBlock Text="》" />
            </StackPanel>
            <TextBlock
                x:Name="FromTextBlock"
                Grid.Row="2"
                Margin="0,10"
                HorizontalAlignment="Right"
                FontWeight="Thin" />
            <TextBlock
                x:Name="UpdateTimeTextBlock"
                Grid.Row="3"
                Margin="0,10"
                HorizontalAlignment="Right"
                FontWeight="Thin" />
        </Grid>
        <Border
            Grid.Row="1"
            Margin="0,2,0,0"
            HorizontalAlignment="Center"
            Background="{ThemeResource MainBackgroudBrush}"
            CornerRadius="8">
            <Button
                x:Name="CloseButton"
                Width="60"
                Click="CloseButton_Click">
                <TextBlock
                    VerticalAlignment="Center"
                    FontFamily="Segoe UI Symbol"
                    Text="&#xE10A;" />
            </Button>
        </Border>
    </Grid>
</local:DialogBase>
